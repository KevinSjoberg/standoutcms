<% javascript "users" %>

<div id="login-box">
  <%= image_tag 'standout_cms.png' %>
  <%= form_tag sessions_path do %>
    <p>
      <label for="login"><%= t('email') %></label><br />
      <%= text_field_tag :login %>
    </p>
    <p>
      <label for="password"><%= t('password') %></label><br />
      <%= password_field_tag :password %>
      <%= submit_tag "OK", :class => 'submit' %>
    </p>
    <p>
      <%= link_to t('forgot_password'), "#", :class => "forgot"%>
    </p>
  <% end %>
  <div id="password_order" style="display: none;">
    <%= form_tag(send_password_reset_path) do %>
      <p><%= t('password_order_description') %></p>
      <label for="email"><%= t('email') %></label><br />
      <%= text_field_tag :email %> <%= submit_tag t('send_reset_email') %>
    <% end %>
  </div>
</div>


