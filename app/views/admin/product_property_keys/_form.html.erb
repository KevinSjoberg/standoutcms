<%= form_for([:admin, @product_property_key]) do |f| %>
  <% if @product_property_key.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@product_property_key.errors.count, "error") %> prohibited this product property key from being saved:</h2>
      <ul>
        <% @product_property_key.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='field'>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class='field'>
    <%= f.label :slug %><br>
    <%= f.text_field :slug %>
  </div>
  <div class='field'>
    <%= f.label :data_type %><br>
    <%= f.select :data_type, options_for_select(t('product_property_keys.types').map{ |k, v| [v, k] }, @product_property_key.data_type) %>
  </div>
  <div class='actions'>
    <%= f.submit t('save'), class: 'button add' %>
    <% if @product_property_key.persisted? %>
      <%= link_to t('delete'), admin_product_property_key_path(@product_property_key), method: :delete, class: 'button destroy', confirm: t('are_you_sure') %>
    <% end %>
  </div>
<% end %>
